@model IEnumerable<WebApplication1.Models.Product>

<div class="container">
    <h2>Product List</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </p>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Description</td>
                                <td>@item.Price.ToString("c")</td>
                                <td>@item.Category.CategoryName</td>
                                <td>
                                    <img src="@item.ImageURL" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                       
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ProductID }, new { @class = "btn btn-danger btn-sm" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
