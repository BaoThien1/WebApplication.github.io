                            <li class=""><a href="grid-view.html">Grid View</a></li>
                            <li class=""><a href="three-col.html">Three Column</a></li>
                            <li class=""><a href="four-col.html">Four Column</a></li>
                            <li class=""><a href="general.html">General Content</a></li>
                        </ul>
                        <form class="navbar-form navbar-right" action="@Url.Action("Search", "Products")" method="get">
                            <div class="form-group">
                                <input type="text" name="searchString" class="form-control" placeholder="Search products..." />
                            </div>
                            <button type="submit" class="btn btn-default">Search</button>
                        </form>



                        <ul class="nav pull-right">
                            @if (Session["CustomerID"] == null && Session["AdminID"] == null)
                            {
                                <!-- Display login link for both Customer and Admin -->
                                <li><a href="@Url.Action("Login", "Home")"><span class="icon-lock"></span> Login</a></li>
                                <!-- Display register link for both Customer and Admin -->
                                <li><a href="@Url.Action("Register", "Home")">Register</a></li>
                            }
                            else if (Session["CustomerID"] != null)
                            {
                                <!-- Display logout link for Customer -->
                                <li><a href="@Url.Action("Logout", "Home")"><span class="icon-lock"></span> Logout</a></li>
                            }
                            else if (Session["AdminID"] != null)
                            {
                                <!-- Display logout link for Admin -->
                                <li><a href="@Url.Action("Logout", "Home")"><span class="icon-lock"></span> Logout</a></li>
                                <!-- Display admin dashboard link -->
                                <li><a href="@Url.Action("AdminDashboard", "Home")">Admin Dashboard</a></li>
                            }
                        </ul>




                    </div>
                </div>
            </div>
        </div>
