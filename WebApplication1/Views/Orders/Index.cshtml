@model IEnumerable<WebApplication1.Models.Invoice>

<table class="table">
    <tr>
        <th>Invoice ID</th>
        <th>Customer ID</th>
        <th>Invoice Date</th>
        <th>Shipping Address</th>
        <th>Phone</th>
        <th>Status</th>
        <th>Total</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.InvoiceID</td>
            <td>@item.CustomerID</td>
            <td>@item.InvoiceDate</td>
            <td>@item.ShipAddress</td>
            <td>@item.Phone</td>
            <td>@item.Status</td>
            <td>@item.Total</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.InvoiceID }, new { @class = "btn btn-info btn-sm" })
                @Html.ActionLink("Edit", "Edit", new { id = item.InvoiceID }, new { @class = "btn btn-primary btn-sm" })
                @using (Html.BeginForm("Delete", "Orders", FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this invoice?');" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("id", item.InvoiceID)
                    <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                }
            </td>
        </tr>
    }
</table>
<div class="mt-3">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
</div>